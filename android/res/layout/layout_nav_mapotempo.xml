<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_mapotempo_bottom_frame"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_gravity="bottom"
  android:clickable="true"
  android:background="?menuBackgroundOpen"
  android:gravity="bottom"
  tools:visibility="visible"
  tools:background="#40FF0000">

  <Button
    android:id="@+id/mt_route_start"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/mt_background"/>

  <LinearLayout
    android:id="@+id/line_frame"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/mt_prv_bm"
      style="@style/MwmTheme.Menu.Line.Button"
      android:src="@drawable/ic_menu_prev"
      android:tag="@string/tag_menu_collapse"
      android:layout_height="64dp"
      android:layout_weight="0"
      android:layout_gravity="left|center_vertical" />

    <ImageView
      android:id="@+id/toggle"
      android:layout_width="@dimen/nav_button_height"
      android:layout_height="@dimen/nav_button_height"
      android:layout_gravity="center_horizontal|center_vertical"
      android:background="?clickableBackground"
      android:scaleType="center"
      android:tint="?iconTint"
      tools:src="@drawable/ic_menu_close"/>

    <TextView
      android:id="@+id/mt_current_bm"
      android:layout_width="wrap_content"
      android:layout_height="64dp"
      android:text="9. Client206 ddddd"
      android:gravity="center"
      android:textSize="18sp"
      android:layout_weight="1"
      android:layout_gravity="center|center_vertical"
      style="@style/MwmTheme.Menu.Line.Button"
      android:tag="@string/tag_menu_collapse"/>

    <ImageButton
      android:id="@+id/mt_action_right"
      android:layout_weight="0"
      style="@style/MwmWidget.MTButton"
      android:background="@android:color/transparent"
      android:src="@drawable/ic_point_done"
      android:layout_height="64dp"
      android:layout_gravity="right|center_vertical" />

    <ImageView
      android:id="@+id/mt_nxt_bm"
      style="@style/MwmTheme.Menu.Line.Button"
      android:src="@drawable/ic_menu_next"
      android:tag="@string/tag_menu_collapse"
      android:layout_height="64dp"
      android:layout_weight="0"
      android:layout_gravity="right|center_vertical" />
  </LinearLayout>


  <FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

    <fragment
      class="com.mapswithme.maps.widget.mapotempo.MapotempoListFragment"
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="250dp"/>

  </FrameLayout>


</LinearLayout>
