<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:background="#40FF0000">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
      android:id="@+id/mt_list_manager_optim"
      style="@style/MwmTheme.Menu.Line.Button"
      android:src="@drawable/ic_font_awesome_4_7_0_cogs_256_0_ffffff_none"
      android:background="?clickableBackground"
      android:layout_height="64dp"
      android:layout_gravity="left|center_vertical" />

    <ImageView
      android:id="@+id/mt_list_manager_upload"
      style="@style/MwmTheme.Menu.Line.Button"
      android:src="@drawable/ic_font_awesome_4_7_0_cloud_upload_256_0_ffffff_none"
      android:tag="@string/tag_menu_collapse"
      android:layout_height="64dp"
      android:layout_weight="1"
      android:layout_gravity="center|center_vertical"/>

    <ImageView
      android:id="@+id/mt_list_manager_share"
      style="@style/MwmTheme.Menu.Line.Button"
      android:src="@drawable/ic_font_awesome_4_7_0_share_alt_256_0_ffffff_none"
      android:tag="@string/tag_menu_collapse"
      android:layout_height="64dp"
      android:layout_weight="1"
      android:layout_gravity="center|center_vertical"/>

    <ImageView
      android:id="@+id/mt_list_manager_activate"
      style="@style/MwmWidget.MTButton"
      android:background="?clickableBackground"
      android:src="@drawable/ic_bookmark_hide"
      android:padding="20dp"
      android:layout_height="64dp"
      android:layout_gravity="right|center_vertical" />
  </LinearLayout>


  <ProgressBar
    android:id="@+id/mt_optim_progress_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/nav_button_height"
    android:indeterminate="false"
    android:indeterminateOnly="false"
    android:progressDrawable="@android:drawable/progress_horizontal"
    android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
    android:minHeight="20dip"
    android:maxHeight="20dip"
    android:visibility="gone"/>

  <LinearLayout
    android:id="@+id/mt_layout_fragment_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>
